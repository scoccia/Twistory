<!DOCTYPE html>

<html>
  <head>
    <%= favicon_link_tag "/favicon.ico" %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <style type="text/css"> 
      body .container 
      {
        background-image: url(<%= asset_path 'background.jpg' %>);
        background-size: cover;
        background-repeat: no-repeat;
      }
    </style>
  </head>

  <% if user_signed_in? %>
  
    <table border="0" class="header">
      <tr>
        <th id="logo">
          <a href="<%= @current_host %>"><%= image_tag("logo.png") %></a>
        </th>
        <th id="spacer"><!--inserire la barra di ricerca--></th>
        <th id="buttons">
          <a href="<%= @current_host %>" onclick="switchLink(this)" id="activeButton" name="Hlink">Home</a>
          <a href="<%= @current_host %>/profile" onclick="switchLink(this)" name="Hlink">Profilo</a>
          <a href="<%= edit_user_registration_path %>" onclick="switchLink(this)" name="Hlink">Impostazioni</a>
          <%= link_to 'Esci', destroy_user_session_path, method: :delete %>
        </th>
      </tr>
    </table>
   
  <% end %>
  
<%= yield %>

</html>
