<html>

<title>Modifica Profilo</title>

  <style type="text/css">
    body
    {
      background-image: url(<%= asset_path 'background.jpg' %>);
    }
  </style>

<div class="dialog">
  <h1>Modifica Profilo<h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="sheet" align="center">
    <% if current_user.profile_image.present? %>
      <%= image_tag(current_user.profile_image_url, :width => 160 , :height => 100) %>
    <% end %>
    <h4>Cambia immagine del profilo:</h4>
    <%= f.file_field :profile_image %>
    
    <h4>Cambia nome:</h4>
    <%= f.text_field :user_name %>
    
    <h4>e-mail:</h4>
    <%= f.email_field :email, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <h4>password: <i>(Lascia in bianco se non desideri cambiarla)</i></h4>
    <%= f.password_field :password, autocomplete: "off" %>

    <h4>conferma password:</h4>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>

    <h4>password attuale: <i>(necessaria per confermare i cambiamenti)</i></h4>
    <%= f.password_field :current_password, autocomplete: "off" %>
    <br><br>
    <%= f.submit "Conferma" %> |
<% end %>
    
    <%= link_to "indietro", :back %>

    <h4>Elimina il mio account</h4>
    <%= link_to "Elimina", registration_path(resource_name), data: { confirm: "Sei sicuro?" }, method: :delete %><br>
</div>

</html>
