<!DOCTYPE html>
<html>

  <head>
    <title>Accedi</title>   
  </head>
  
  <body>
    <div class="header">
      <div class="h-left">
        <%= image_tag("logo.png") %>
      </div>
      <div class="h-right">
        <div class="home-link">
          <%= link_to 'Home', @current_host %>&nbsp
          <%= link_to "Iscriviti", new_user_registration_path %>
        </div>
      </div>
    </div>
	
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div id="wrapper">
	    <div class="login-form">
	    
	      <div class="title">
          <h1>Accedi</h1>
        </div>
        
        <% if notice %>
          <p align="center"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p align="center"><%= alert %></p>
        <% end %>
        	      
		    <div class="content">
		      
		      <div>
		        <%= f.email_field :email, :placeholder => "e-mail", autofocus: true  %>
		      </div>
		      <div>
		        <%= f.password_field :password, :placeholder => "Password" , autocomplete: "off" %>
		      </div>
		      <p>
		      <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %><b>Mantieni aperto l'accesso</b>
          <% end %>
          </p> 
		  </div>

		  <div class="footer">
		    <p><%= f.submit "Accedi" %></p>
        <p><%= link_to "Dimenticato la password?", new_password_path(resource_name) %></p>
		  </div>
	
	    </div>
    </div>
               
      <% end %>  
        
  </body>
	
</html>
