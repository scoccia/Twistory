<html>

  <style type="text/css">
    body
    {
      text-align: center;
      background-image: url(<%= asset_path 'background.jpg' %>);
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      font-family: Arial, Courier;
    }

    a:link 
    { 
      color: #680000 ;
    }

    a:visited 
    { 
      color: #680000 ;
    }

    div.dialog 
    {
      width: 32em;
      margin: 4em auto 0 auto;
      border: 1px solid #CCC;
      border-right-color: #999;
      border-left-color: #999;
      border-bottom-color: #BBB;
      border-top: #B00100 solid 4px;
      border-top-left-radius: 9px;
      border-top-right-radius: 9px;
      border-bottom-left-radius: 9px;
      border-bottom-right-radius: 9px;
      background-color: white;
      padding: 7px 4em 0 4em;
      color: #B00100;
      font-family: Courier, Arial;   
    }
   
    body > p 
    {
      width: 40em;
      margin: 0 auto 1em;
      padding: 1em 0;
      background-color: #F7F7F7;
      border: 1px solid #CCC;
      border-right-color: #999;
      border-bottom-color: #999;
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
      border-top-color: #DADADA;
      color: #444;
      box-shadow:0 3px 8px rgba(50, 50, 50, 0.17);
    }
  </style>  

  <div class="dialog">
    <h1><b>La Grande Guerra</b></h1>
  </div>
  
  <br>
  
  <p>
    <%= link_to 'Nuovo Feed', new_feed_path %>
  </p>

  <% @feeds.each do |feed| %>
  <body>
    <p>
      <b>Testo del Feed:</b><br><br>
      <%= feed.feed_text %><br><br>
      <b>Data di pubblicazione:</b><br><br><%= feed.date %><br><br>
      <%= link_to 'Mostra', feed %>
      
      <% if feed.user_id == current_user.id %>
        <%= link_to 'Modifica', edit_feed_path(feed) %>
        <%= link_to 'Elimina', feed, method: :delete, data: { confirm: 'Sei sicuro?' } %>
      <% end %>
      
      <a href="http://localhost:3000" style="color:#680000 ">Torna all'inizio</a><br>
    </p>
  </body>
  <% end %>
    
  <br><br>
    
  <p>
    <%= link_to 'Nuovo Feed', new_feed_path %>
  </p>
  
</html>
