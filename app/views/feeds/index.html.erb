<html>

  <head>
    <title>La Grande Guerra</title>
    <style type="text/css"> body {background-image: url(<%= asset_path 'background.jpg' %>);}</style>
  </head>  

  <body>
  
    <div class="dialog">
      <div class="title">
        <h1><b>La Grande Guerra</b></h1>
      </div>
    
  
    <%= render 'form' %>
    </div>
    <br>
    
    <% if !@feeds.present? %>
      <div class="document">
        <div class="title" align="center">
          <h1><b>Benvenuto!</b></h1>
        </div>
        <br>
        <div class="text"> 
         <b>Tutti i vizi di tutte le et√† e di tutti i paesi del globo riuniti assieme, non eguaglieranno mai i peccati che provoca una sola campagna di guerra.</b><br><br>
        </div>
        <div class="dochead">  
          <h1 align="right">cit Voltaire</h1>
        </div>
      </div>
    <% else %>
      <% @feeds.reverse_each do |feed| %>
        <% read_usr = User.find(feed.user_id) %>

        <div class="document">
              
                <% if read_usr.profile_image.present? %>
                    <div class="image-box">
                      <%= image_tag(read_usr.profile_image_url, :width => 75 , :height => 75) %>
                    </div>
                <% end %>

                <% if feed.user_id == current_user.id %>
                  <div class="my-dochead">
                <% else %>
                  <div class="dochead">
                <% end %> 

                    <span class="dhead"><%= read_usr.user_name %></span>
                  </div>
                
                <div>
                    <span class="post">
                      <% if feed.has_been_published == true %>
                        Pubblicato in data: <%= feed.date %>
                      <% else %>
                        Da pubblicare in data: <%= feed.date %>
                      <% end %>
                    </span>
                </div>
                
                <% if feed.feed_image.present? %>
                  <br><br>
                  <div align="center">
                    <%= image_tag(feed.feed_image_url, :height => 400 , :width => 400) %><br>
                  </div>
                <% end %>

                <div class="dcontent">
                  <div class="text">
                    <%= feed.feed_text %>
                  </div>
                </div>
                <br><br><br><br>
                
                <% if feed.user_id == current_user.id %>
                  <div class="my-bubble" align="right">
                <% else %>
                  <div class="bubble" align="right">
                <% end %> 
                  <span> <%= link_to 'Mostra', feed %></span>
               

                    <% if feed.user_id == current_user.id and feed.has_been_published == false %>
                      <span> <%= link_to 'Modifica', edit_feed_path(feed) %></span>
                      <span> <%= link_to 'Elimina', feed, method: :delete, data: { confirm: 'Sei sicuro?' } %></span>
                    <% end %>
                  </div>
        </div>
        <br>
      <% end %>
    <% end %>
  
  </body>
        
</html>
