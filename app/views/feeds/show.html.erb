<html>
  
  <title>Visualizza Feed</title>
  
  <style type="text/css">
    body
    {
      background-image: url(<%= asset_path 'background.jpg' %>);
    }
  </style>

  <body>

    <div class="dialog">
      <h1><b>Visualizza Feed:</b></h1>
    </div>
		
    <div class="sheet">
      <% if @feed.feed_image.present? %>
        <b>Immagine relativa al Feed:</b><br><br>
        <%= image_tag(@feed.feed_image_url, :width => 380 , :height => 220) %>
      <% end %>
      
      <h3><b>Testo del Feed:</b></h3>
      <%= @feed.feed_text %>
      
      <% if @feed.has_been_published == true %>
        <h3><b>Pubblicato in data:</b></h3>
      <% else %>
        <h3><b>Da pubblicare in data:</b></h3>
      <% end %>
      <%= @feed.date %><br><br>  
    </div>
    
    <div class="sheet">
      <% if @feed.user_id == current_user.id and @feed.has_been_published == false %>
        <%= link_to 'Modifica', edit_feed_path(@feed) %> |        
      <% end %>  
        
      <%= link_to 'Indietro', :back %>
    </div>
    
    
  </body>
  
</html>
