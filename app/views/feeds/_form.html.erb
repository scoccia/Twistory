<%= form_for(@feed) do |f| %>
     
<%= feed_error_messages! %>
      
<ul id="mainTextBoxContainer">

  <li>      
    <%= f.text_area :feed_text, :class => "textBox", :onkeyup => 'textCounter(this, "charCounterIta");', :onclick => 'show_hide();', :placeholder => "Scrivi qui il testo del tuo feed ..." %>
  </li>
  <li id="charCounterIta" style="text-align: right; color: green; font-weight: normal">
    124
  </li>
  
  <div id="dateTimeBox">
    <li>
      Inserisci la data di pubblicazione:</br>
      <%= f.datetime_select :date, :minute_step => 15 %>
    </li>
    <li>
      Inserisci un'immagine:</br>
      <%= f.file_field :feed_image %>
    </li>
    <li>
      <input type="submit" value="Conferma" class="button"/>
    </li>
  </div>
  
</ul>

<% end %>
