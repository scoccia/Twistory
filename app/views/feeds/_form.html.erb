<!DOCTYPE html>
<html>

  <body>
    <%= form_for(@feed) do |f| %>
     
      <%= feed_error_messages! %>  
      <%= f.text_area :feed_text, class: "text-box", :onclick => 'show_hide();' , :placeholder => "Scrivi qui il testo del tuo feed"%>
      <p id="key" style="display: none">
        <b>Inserisci la data in cui verr√† pubblicato (fuso orario UTC):</b><br>
        <%= f.datetime_select :date %>
        <br><br>
        <b>Inserisci un'immagine:</b><br>
        <%= f.file_field :feed_image %>
        <br><br>
        <%= f.submit %>
      </p>
      
    <% end %>
  </body>

</html>
