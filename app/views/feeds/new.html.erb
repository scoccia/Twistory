<!DOCTYPE html>
<html>

  <head>
    <title>Nuovo Feed</title>
    <style type="text/css">body {background-image: url(<%= asset_path 'background.jpg' %>);}</style>
  </head>
  
  <body>	

    <div class="dialog">
      <div class="title">
        <h1><b>Nuovo feed</b></h1>
      </div>
      
        <% if notice %>
          <p align="center"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p align="center"><%= alert %></p>
        <% end %>
         
      <%= render 'form' %>
    </div>

    <div class="document" align="center">
      <div class="bubble">
          <%= link_to 'Indietro', :back %>
      </div>
    </div>
	  
  </body>

</html>
